<%- include('../partials/header') %>
<h1>Your Booked Flights</h1>
<table>
    <thead>
        <tr>
            <th>Airline:</th>
            <th>Airport:</th>
            <th>Flight Number:</th>
            <th>Date of Departure:</th>
            <th>Seats:</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach((f) => { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
            <td><%= f.seats %></td>
        </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>